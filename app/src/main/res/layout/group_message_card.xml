<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/group_message_card_padding"
    android:layout_marginTop="@dimen/group_message_top_margin"
    android:layout_marginBottom="@dimen/group_message_bottom_margin"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/group_message_card_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/group_message_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:padding="@dimen/message_name_padding"
            tools:text="@string/dummy_name"/>

        <TextView
            android:id="@+id/group_message_text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="@dimen/message_text_padding"
            tools:text="@string/long_dummy_message" />

        <TextView
            android:id="@+id/group_message_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:gravity="end"
            android:paddingEnd="@dimen/group_message_time_end_padding"
            android:paddingStart="@dimen/group_message_time_start_padding"
            tools:text="@string/dummy_timestamp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
